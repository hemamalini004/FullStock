    <!-- Custom CSS -->
    <style>
        /* --- Global Variables & Reset --- */
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
            --bg-color: #f8f9fa;
            --text-dark: #2d3436;
            --text-light: #636e72;
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        }

        body {
            background-color: var(--bg-color);
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
            overflow-x: hidden;
            position: relative;
        }

        /* --- Animated Background --- */
        body::before {
            content: '';
            position: fixed;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(102, 126, 234, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
            z-index: -1;
            animation: pulseBg 10s infinite alternate;
        }

        @keyframes pulseBg {
            0% { transform: scale(1); }
            100% { transform: scale(1.1); }
        }

        /* --- Navbar Styling --- */
        .navbar {
            background: rgba(33, 37, 41, 0.85); /* Semi-transparent dark */
            backdrop-filter: blur(10px); /* Glass effect */
            padding: 15px 0;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: 1px;
            color: #fff !important;
        }
        
        .navbar-brand span {
            color: #667eea;
        }

        /* --- Profile Section Styling --- */
        .profile-wrapper {
            margin-top: 80px;
            margin-bottom: 60px;
        }

        .profile-card {
            background: var(--primary-gradient);
            color: white;
            border-radius: 20px;
            padding: 60px 40px; /* Increased top padding since there is no image */
            box-shadow: var(--card-shadow);
            position: relative;
            overflow: hidden;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            border: none;
        }

        .profile-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--hover-shadow);
        }

        /* Decorative circle on profile card */
        .profile-card::after {
            content: '';
            position: absolute;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            top: -50px;
            right: -50px;
        }

        .profile-card h2 {
            font-weight: 700;
            margin-bottom: 10px;
            font-size: 2.5rem; /* Increased font size for emphasis */
        }

        .profile-card p {
            font-size: 1.2rem;
            opacity: 0.9;
            font-weight: 300;
            margin-bottom: 25px;
        }

        /* --- Section Titles --- */
        .section-title {
            margin-top: 50px;
            margin-bottom: 30px;
            font-weight: 700;
            color: var(--text-dark);
            position: relative;
            display: inline-block;
        }

        .section-title::after {
            content: '';
            display: block;
            width: 50%;
            height: 4px;
            background: var(--primary-gradient);
            margin-top: 8px;
            border-radius: 2px;
        }

        /* --- Skills Section (Custom List Group) --- */
        .skills-container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }

        .list-group {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 15px;
            border: none;
        }

        .list-group-item {
            background: white;
            border: 1px solid #eee;
            padding: 12px 25px;
            border-radius: 50px; /* Pill shape */
            font-weight: 600;
            color: #555;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
            cursor: default;
        }

        /* Specific colors for skills to make them pop */
        .list-group-item:nth-child(1) { border-left: 5px solid #e44d26; } /* HTML */
        .list-group-item:nth-child(2) { border-left: 5px solid #7952b3; } /* Bootstrap */
        .list-group-item:nth-child(3) { border-left: 5px solid #f89820; } /* Java */
        .list-group-item:nth-child(4) { border-left: 5px solid #3776ab; } /* Python */

        .list-group-item:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
            background-color: white;
        }

        /* --- Contact Section --- */
        .contact-box {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
            border-top: 5px solid #764ba2;
            transition: transform 0.3s;
        }

        .contact-box:hover {
            transform: translateY(-5px);
        }

        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            font-size: 1.1rem;
            color: var(--text-light);
        }

        .contact-item i {
            width: 40px;
            height: 40px;
            background: #f0f2f5;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: #667eea;
            transition: background 0.3s, color 0.3s;
        }

        .contact-item:hover i {
            background: var(--primary-gradient);
            color: white;
        }

        .btn-custom {
            background: var(--primary-gradient);
            color: white;
            border: none;
            padding: 10px 30px;
            border-radius: 30px;
            margin-top: 20px;
            font-weight: 600;
            box-shadow: 0 5px 15px rgba(118, 75, 162, 0.3);
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(118, 75, 162, 0.5);
            color: white;
        }

        /* --- Footer --- */
        footer {
            background-color: #2d3436;
            color: white;
            text-align: center;
            padding: 30px 0;
            margin-top: 80px;
            position: relative;
        }
        
        footer p {
            margin: 0;
            opacity: 0.7;
            font-size: 0.9rem;
        }

        footer .social-icons {
            margin-bottom: 15px;
        }

        footer .social-icons a {
            color: white;
            margin: 0 10px;
            font-size: 1.2rem;
            transition: color 0.3s;
        }

        footer .social-icons a:hover {
            color: #667eea;
        }

        /* --- Animations on Load --- */
        .fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
            opacity: 0;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .delay-1 { animation-delay: 0.2s; }
        .delay-2 { animation-delay: 0.4s; }
        .delay-3 { animation-delay: 0.6s; }

    </style>
</head>

