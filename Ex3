<!-- WARNING POPUP MODAL -->
<div class="modal-overlay" id="warning-modal">
    <div class="modal-box">
        <h3>⚠️ Incomplete Quiz</h3>
        <p id="modal-message">You have unanswered questions. Are you sure you want to submit?</p>
        <div class="modal-actions">
            <button id="modal-cancel" class="secondary">Go Back</button>
            <button id="modal-confirm" class="primary" style="background-color: #dc3545;">Submit Anyway</button>
        </div>
    </div>
