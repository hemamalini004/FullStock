        <div id="final-score">0/0</div>

        <h3 style="border-bottom: 1px solid #dee2e6; padding-bottom: 10px; margin-top: 25px;">Review Answers</h3>
        <div id="review-section"></div>

        <button onclick="location.reload()" class="secondary full-width">Restart Quiz</button>
    </div>
