<div class="container" id="quiz-page" style="display:none;">
    
    <!-- Header Bar -->
    <div class="quiz-header">
        <span id="question-count">Question 1 / 10</span>
        <span id="timer-display" class="timer-badge">20:00</span>
    </div>

    <div class="content-padding">
        <h2 id="question" style="text-align: left; color: #212529; font-weight: 600; margin-bottom: 25px;">Question Text</h2>
        
        <ul id="options"></ul>

        <div class="navigation">
            <button id="prev" class="secondary">Previous</button>
