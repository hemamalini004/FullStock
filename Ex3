<script>
 $(document).ready(function(){

    const quizData = [
        {
            question: "What does HTML stand for?",
            options: ["Hyper Text Markup Language", "High Text Machine Language", "Hyper Tool Multi Language", "Home Tool Markup Language"],
            answer: 0
        },
        {
            question: "Which property is used to change the background color in CSS?",
            options: ["bgcolor", "color", "background-color", "background-style"],
            answer: 2
        },
        {
            question: "Which symbol is used as a shortcut for jQuery?",
            options: ["%", "$", "&", "@"],
            answer: 1
        },
        {
            question: "Inside which HTML element do we put the JavaScript?",
            options: ["scripting", "js", "script", "javascript"],
            answer: 2
        },
        {
            question: "Which data type is used to store true or false values?",
            options: ["String", "Boolean", "Integer", "Float"],
            answer: 1
        },
        {
            question: "Which event occurs when the user clicks on an HTML element?",
            options: ["onmouseover", "onchange", "onmouseclick", "onclick"],
            answer: 3
        },
        {
            question: "How do you declare a JavaScript variable?",
            options: ["variable carName;", "v carName;", "var carName;", "val carName;"],
            answer: 2
        },
        {
            question: "Which CSS property controls the text size?",
            options: ["font-style", "text-style", "font-size", "text-size"],
            answer: 2
        },
        {
            question: "What is the correct syntax for referring to an external script called 'app.js'?",
            options: ["script href='app.js'", "script name='app.js'", "script src='app.js'", "script file='app.js'"],
            answer: 2
        },
        {
            question: "Which loop is guaranteed to execute at least once?",
            options: ["for loop", "while loop", "do-while loop", "foreach loop"],
            answer: 2
        }
    ];

    let currentQuestion = 0;
    let userAnswers = [];
    let studentName = "";
    let rollNo = "";
    
    // Timer Variables
    const totalTime = 20 * 60; 
    let timeLeft = totalTime;
    let timerInterval;

    // --- Login Logic ---
    $("#startQuiz").click(function(){
        rollNo = $("#roll").val().trim();
        studentName = $("#name").val().trim();

        if(rollNo === "" || studentName === ""){
            alert("Please enter Roll Number and Name");
            return;
        }

        $("#login-page").fadeOut(200, function(){
            $("#quiz-page").fadeIn(200);
        });
        
        startTimer();
        loadQuestion();
    });

    // --- Timer Logic ---
    function startTimer() {
        timerInterval = setInterval(function() {
            timeLeft--;
            updateTimerDisplay();

            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                alert("Time's up! Submitting quiz automatically.");
                finalSubmit(); 
            }
        }, 1000);
    }

    function updateTimerDisplay() {
        let minutes = Math.floor(timeLeft / 60);
        let seconds = timeLeft % 60;
        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        $("#timer-display").text(minutes + ":" + seconds);

        if (timeLeft < 60) {
            $("#timer-display").addClass("low-time");
        }
    }

    // --- Load Question ---
    function loadQuestion(){
        $("#question-count").text(`Question ${currentQuestion + 1} / ${quizData.length}`);
        $("#question").text(quizData[currentQuestion].question);
        $("#options").empty();

        quizData[currentQuestion].options.forEach((opt,i)=>{
            let checked = userAnswers[currentQuestion] === i ? "checked" : "";
            let selectedClass = userAnswers[currentQuestion] === i ? "selected-option" : "";
            
            $("#options").append(`
                <li class="${selectedClass}">
                    <label>
                        <input type="radio" name="option" value="${i}" ${checked}>
                        ${opt}
                    </label>
                </li>
            `);
        });

        // Click event to select option
        $("li").click(function(e){
            if(e.target.tagName !== 'INPUT') {
                $(this).find("input").prop("checked", true);
            }
            $("li").removeClass("selected-option");
            $(this).addClass("selected-option");
        });

        // Button Visibility Logic
        $("#prev").prop("disabled", currentQuestion === 0);
        
        if(currentQuestion === quizData.length - 1){
            $("#next").hide();
            $("#submit").show();
        } else {
            $("#next").show();
            $("#submit").hide();
        }
    }

    function saveAnswer(){
        let selected = $("input[name='option']:checked").val();
        if(selected !== undefined){
            userAnswers[currentQuestion] = parseInt(selected);
        }
    }

    $("#next").click(function(){
        saveAnswer();
        if(currentQuestion < quizData.length - 1){
            currentQuestion++;
            loadQuestion();
        }
    });

    $("#prev").click(function(){
        saveAnswer();
        if(currentQuestion > 0){
            currentQuestion--;
            loadQuestion();
        }
    });

    // --- Submit & Modal Logic ---
    $("#submit").click(function(){
        saveAnswer();

        let answeredCount = userAnswers.filter(a => a !== undefined).length;
        let unanswered = quizData.length - answeredCount;

        if(unanswered > 0){
            // Show Popup instead of inline warning
            $("#modal-message").text(`You have ${unanswered} unanswered question(s). Are you sure you want to submit?`);
            $("#warning-modal").addClass("active");
        } else {
            clearInterval(timerInterval);
            finalSubmit();
        }
    });

    // Handle Modal Buttons
    $("#modal-cancel").click(function(){
        $("#warning-modal").removeClass("active");
    });

    $("#modal-confirm").click(function(){
        $("#warning-modal").removeClass("active");
        clearInterval(timerInterval);
        finalSubmit();
    });

    function finalSubmit(){
        $("#quiz-page").fadeOut(200, function(){
            $("#result-page").fadeIn(200);
        });

        let score = 0;
        $("#review-section").empty();

        quizData.forEach((q,i)=>{
            let userAns = userAnswers[i];
            let correct = q.answer;
            let isCorrect = (userAns === correct);

            if(isCorrect) score++;

            let cssClass = isCorrect ? "correct" : "wrong";
            let userText = userAns !== undefined ? q.options[userAns] : "Skipped";

            $("#review-section").append(`
                <div class="review ${cssClass}">
                    <div style="font-weight: 600; margin-bottom: 4px;">Q${i+1}: ${q.question}</div>
                    <div style="font-size: 13px; color: #495057;">
                        You: <span style="font-weight: 500; color: #212529;">${userText}</span>
                        ${!isCorrect ? `<br>Correct: <span style="font-weight: 500; color: #198754;">${q.options[correct]}</span>` : ''}
                    </div>
                </div>
            `);
        });

        $("#student-info").text(`${studentName} (${rollNo})`);
        $("#final-score").text(`${score} / ${quizData.length}`);
    }

});
</script>

</body>
</html>
